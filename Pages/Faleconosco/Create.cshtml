@page
@model AutoEscolaDirecao.Pages.Faleconosco.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Fale Conosco</h1>

<h4>Novo Formulário</h4>
<hr />
<form method="post">

    <div class="row">
        <div class="col-md-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Faleconosco.Nome" class="control-label"></label>
                <input asp-for="Faleconosco.Nome" class="form-control" />
                <span asp-validation-for="Faleconosco.Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Faleconosco.Contato" class="control-label"></label>
                <input asp-for="Faleconosco.Contato" class="form-control" />
                <span asp-validation-for="Faleconosco.Contato" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="Faleconosco.Duvidas" class="control-label"></label>
                <input asp-for="Faleconosco.Duvidas" class="form-control" />
                <span asp-validation-for="Faleconosco.Duvidas" class="text-danger"></span>
            </div>
        </div>
    </div>

        <div class="col-md-8">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    
</form>
    

<div>
    <a asp-page="Index">Retornar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
