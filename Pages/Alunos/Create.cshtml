@page
@model AutoEscolaDirecao.Pages.Alunos.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Alunos</h1>

<h4>Novo Aluno</h4>
<hr />
<form method="post">

    <div class="row">
        <div class="col-md-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Alunos.Nome" class="control-label"></label>
                <input asp-for="Alunos.Nome" class="form-control" />
                <span asp-validation-for="Alunos.Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Alunos.Documento" class="control-label"></label>
                <input asp-for="Alunos.Documento" class="form-control" />
                <span asp-validation-for="Alunos.Documento" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Alunos.Email" class="control-label"></label>
                <input asp-for="Alunos.Email" class="form-control" />
                <span asp-validation-for="Alunos.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Alunos.Telefone" class="control-label"></label>
                <input asp-for="Alunos.Telefone" class="form-control" />
                <span asp-validation-for="Alunos.Telefone" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Alunos.DataNascimento" class="control-label"></label>
                <input asp-for="Alunos.DataNascimento" class="form-control" />
                <span asp-validation-for="Alunos.DataNascimento" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Alunos.Curso" class="control-label"></label>
                <input asp-for="Alunos.Curso" class="form-control" />
                <span asp-validation-for="Alunos.Curso" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
        

<div>
    <a asp-page="Index">Retornar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
