@page
@model AutoEscolaDirecao.Pages.Treinamentos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Treinamentos</h1>

<p>
    <a asp-page="Create">Novo Treinamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Treinamentos[0].Curso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Treinamentos[0].Alunos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Treinamentos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Curso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alunos)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
